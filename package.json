{
    "name": "hatid",
    "version": "0.0.1",
    "private": true,
    "packageManager": "pnpm@8.6.10",
    "scripts": {
        "dev": "vite dev",
        "build": "vite build",
        "preview": "vite preview",
        "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
        "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
        "test": "vitest run",
        "test:unit": "vitest",
        "lint": "prettier --check . && eslint .",
        "fmt": "prettier --write .",
        "db:init": "initdb -D data -U postgres",
        "db:start": "postgres -D data",
        "db:template": "psql -U postgres -f db/init.sql -1 template1",
        "db:create": "createdb -U postgres",
        "db:drop": "dropdb -U postgres",
        "db:shell": "psql -U postgres"
    },
    "devDependencies": {
        "@floating-ui/dom": "^1.4.5",
        "@skeletonlabs/skeleton": "^1.10.0",
        "@sveltejs/adapter-node": "^1.3.1",
        "@sveltejs/kit": "^1.22.3",
        "@typescript-eslint/eslint-plugin": "^6.2.0",
        "@typescript-eslint/parser": "^6.2.0",
        "autoprefixer": "^10.4.14",
        "eslint": "^8.45.0",
        "eslint-config-prettier": "^8.8.0",
        "eslint-plugin-svelte": "^2.32.4",
        "postcss": "^8.4.27",
        "postgres": "^3.3.5",
        "prettier": "^3.0.0",
        "prettier-plugin-svelte": "^3.0.1",
        "svelte": "^4.1.1",
        "svelte-check": "^3.4.6",
        "tailwindcss": "^3.3.3",
        "tslib": "^2.6.1",
        "typescript": "^5.1.6",
        "vite": "^4.4.7",
        "vitest": "^0.33.0",
        "zod": "^3.21.4"
    },
    "type": "module"
}
